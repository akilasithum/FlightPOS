<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MSReader" >

    <LinearLayout
        android:id="@+id/layout_getMsr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <Button
            android:id="@+id/bt_getTrackInfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="getTrackInfo"
            android:layout_weight="1"
            android:text="getTrackInfo"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_track1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_getMsr"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_track1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Card Number"
            />
        <EditText
            android:id="@+id/ed_track1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_track2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_track1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_track2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Card Holder's Name"
            />
        <EditText
            android:id="@+id/ed_track2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>
</RelativeLayout>