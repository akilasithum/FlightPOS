<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sealMainLayout"
    tools:context=".DefineCartNumbersActivity" >

    <LinearLayout
        android:id="@+id/layoutDefineCars"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:layout_marginTop="45dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:background="@drawable/layoutbackgroundborder"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/cart1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
            <ImageButton
            android:id="@+id/scanCart1"
            android:paddingLeft="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_barcode_reader"
            android:clickable="true" />
    </LinearLayout>

        <Button
            android:id="@+id/defineCartsBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Define Cart Numbers" />

    </LinearLayout>

</RelativeLayout>