<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_bottom_style"
    android:layout_height="match_parent"
    tools:context=".VerifyCartsActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/flight_bg"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="10dp">
                    <ImageButton
                        android:id="@+id/backPressBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:background="@drawable/back_arrow_icon"
                        android:layout_weight="1"
                        android:clickable="true" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Verify Carts"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_weight="8"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/verifyDrawerTable"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="15dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/drawerNameText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:paddingBottom="15dp"
                        android:textSize="16dp" />
                </TableRow>
            </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="30dp">

            <EditText
                android:id="@+id/verifyDrawerRemark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:gravity="top|left"
                android:lines="10"
                android:tooltipText="Add a remark"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:background="@drawable/textinputborderlight"
                android:scrollbars="vertical" />
            <Button
                android:id="@+id/addInventoryRemark"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_style_blue"
                android:text="Add a Remark" />

            <Button
                android:id="@+id/verifyDrawerBtn"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_style"
                android:text="Verify Cart" />

        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>